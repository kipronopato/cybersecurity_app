# Environment Variables for Production Deployment

# Django Settings
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=cybersecurity.settings_production

# Database Configuration (Render will provide DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Email Configuration
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Optional: Manual Database Configuration (if not using DATABASE_URL)
DATABASE_NAME=cybersecurity_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your-db-password
DATABASE_HOST=localhost
DATABASE_PORT=5432